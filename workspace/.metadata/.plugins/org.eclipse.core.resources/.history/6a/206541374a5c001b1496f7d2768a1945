package bank;

public class Bank {
	//객체
	//돈
	int money;
	//예금주
	String name;
	//계좌번호
	int account;
	//비밀번호
	String pw;
	//핸드폰 번호
	String phone;
	
	//메소드
	public Bank() {
	}
	//입금
	/**
	 * 
	 * @param money
	 * @throws ArithmeticException
	 */
	public void input(int money) {
		if(money<0) {
			throw new ArithmeticException();
		}
		this.money+=money;
		System.out.println(money);
	}
	//출금
	boolean output(int money) {
		if(this.money - money < 0) {
			return false;
		}
		this.money -= money;
		return true;
	}
	//잔액조회
	int check() {
		return this.money;
	}
}
