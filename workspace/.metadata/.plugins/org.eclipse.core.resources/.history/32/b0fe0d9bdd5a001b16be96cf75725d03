package day01;

public class MethodTask {
	//1~n까지의 합을 println()으로 출력하는 메소드
	public int add(int num1, int num2) {
		int sum=0;
		while(true) {
			sum+=num1;
			num1++;
			if(num1>num2) {
				break;
			}
		}
		return sum;
	}
	//나눗셈을 구해주는 메소드
	public int divide(int num1, int num2) {
		return num1/=num2;
	}
	
	public static void main(String[] args) {
		System.out.println(new MethodTask().add(1, 10));
		System.out.println(new MethodTask().divide(10, 2));
	}
}
